= form_for @course do |f|
  = f.error_messages
  %p
    = f.label :nombre
    %br/
    = f.text_field :name
  %p
    = f.label :descripcion
    %br/
    = f.text_area :description
  - if can? :control, @course
    %p
      = f.label :password
      %br/
      = f.password_field :password
    %p
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %p= f.submit
