- title 'Listando Estudiantes'
= content_for :head do
  = stylesheet_link_tag 'telelab_datatables'
  
  = javascript_include_tag :jquery_datatables
  = javascript_include_tag 'datatable'

%table.display{:cellpadding=> "0", :cellspacing => "0", 'datatable' => true, :fulltable => true}
  %thead
    %tr
      %th Firstname
      %th Lastname
      %th Username
      %th Email
      %th Actions
  %tfoot
    %tr
      %th Firstname
      %th Lastname
      %th Username
      %th Email
      %th Actions
  %tbody
    - @students.each do |student|
      %tr
        %td= student.profile.firstname
        %td= student.profile.lastname
        %td= student.username
        %td= student.email
        %td{ :style => "text-align: center"}
          = link_to 'Show', student, :class => 'show_button'
          = link_to 'Edit', edit_student_path(student), :class => 'edit_button'
          = link_to 'Destroy', student, :confirm => 'Are you sure?', :method => :delete, :class => 'delete_button'

%br/
= link_to 'New student', new_student_path, :class => 'button'