= content_for :head do
  -#= javascript_include_tag :jquery_datatables
  -#= javascript_include_tag 'admin'
%h1 Listing admins
%table#admins_table
  %thead
    %tr
      %th Username
      %th Firstname
      %th Lastname
      %th Show
      %th Edit
      %th Destroy
  %tbody
    - @admins.each do |admin|
      %tr
        %td= admin.username
        %td= admin.profile.firstname
        %td= admin.profile.lastname
        %td= link_to 'Show', admin
        %td= link_to 'Edit', edit_admin_path(admin)
        %td= link_to 'Destroy', admin, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Admin', new_admin_path
