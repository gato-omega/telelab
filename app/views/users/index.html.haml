= content_for :head do
  = stylesheet_link_tag 'telelab_datatables'
  
  = javascript_include_tag :jquery_datatables
  = javascript_include_tag 'datatable'

%h1 Listing users
%table.display{:cellpadding=> "0", :cellspacing => "0", 'datatable' => true}
  %thead
    %tr
      %th Firstname
      %th Lastname
      %th Username
      %th Email
      %th Type
      %th Actions
  %tfoot
    %tr
      %th Firstname
      %th Lastname
      %th Username
      %th Email
      %th Type
      %th Actions
  %tbody
    - @users.each do |user|
      - if can? :see_user, user
        %tr
          %td= user.profile.firstname
          %td= user.profile.lastname
          %td= user.username
          %td= user.email
          %td= user.type
          %td{ :style => "text-align: center"}
            = link_to 'Show', user, :class => 'show_button'
            = link_to 'Edit', edit_user_path(user), :class => 'edit_button'
            = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :class => 'delete_button'

%br/
= link_to 'New user', new_user_path, :class => 'button'
