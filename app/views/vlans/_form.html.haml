= form_for @vlan do |f|
  -if @vlan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vlan.errors.count, "error")} prohibited this vlan from being saved:"
      %ul
        - @vlan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :numero
    = f.text_field :numero
  .field
    = f.label :practica
    = f.text_field :practica
  .field
    = f.label :puerto
    = f.text_field :puerto
  .field
    = f.label :endpoint
    = f.text_field :endpoint
  .actions
    = f.submit 'Save'
