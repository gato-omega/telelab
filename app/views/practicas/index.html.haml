- title 'Listando Practicas'
= content_for :head do
  = stylesheet_link_tag 'telelab_datatables'
  
  = javascript_include_tag :jquery_datatables
  = javascript_include_tag 'datatable'

%table.display{:cellpadding=> "0", :cellspacing => "0", 'datatable' => true, :fulltable => true}
  %thead
    %tr
      %td Nombre
      %td Inicio
      %td Fin
      %td Estado
      %th Acciones
  %tfoot
    %tr
      %td Nombre
      %td Inicio
      %td Fin
      %td Estado
      %th Acciones
  %tbody
    - @practicas.each do |practica|
      %tr
        %td= practica.name
        %td= practica.start
        %td= practica.end
        %td= practica.estado
        %td{ :style => "text-align: center"}
          = link_to 'Show', practica, :class => 'show_button'
          = link_to 'Editar', edit_practica_path(practica), :class => 'edit_button'
          = link_to 'Destroy', practica, :confirm => 'Are you sure?', :method => :delete, :class => 'delete_button'

%br/
= link_to 'New practica', new_practica_path, :class => 'button'