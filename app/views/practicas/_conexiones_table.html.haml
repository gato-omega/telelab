%table#conexiones_table.display{:cellpadding=> "0", :cellspacing => "0", 'datatable' => true, 'conexiones' => true}
  %thead
    %tr
      %th ID
      %th Puerto A
      %th Puerto B
      %th Accion
  %tbody
    - for conexion_i in conexiones
      %tr
        %td= conexion_i.id
        %td= conexion_i.puerto.fullname
        %td= conexion_i.endpoint.fullname
        %td{ :style => "text-align: center"}
          = link_to "Borrar", practica_remove_conexion_path(@practica, conexion_i), :confirm => 'Are you sure?', :method => :delete, :remote => true,:class => 'delete_button'
